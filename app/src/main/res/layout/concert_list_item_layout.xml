<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/concert_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:maxHeight="20dp"
        />
    <TextView
        android:id="@+id/concert_name"
        android:layout_toRightOf="@+id/concert_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="17sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Loading"
        android:ellipsize="end"
        android:singleLine="true">
    </TextView>
    <TextView
        android:id="@+id/concert_time"
        android:layout_toRightOf="@+id/concert_thumbnail"
        android:layout_below="@+id/concert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="11sp"
        android:text="Loading"
        android:singleLine="true">
    </TextView>

    <TextView
        android:id="@+id/concert_place"
        android:layout_toRightOf="@+id/concert_thumbnail"
        android:layout_below="@+id/concert_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="11sp"
        android:text="Loading"
        android:singleLine="true">
    </TextView>


</RelativeLayout>